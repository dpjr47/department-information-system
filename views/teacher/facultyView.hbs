<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous"/>
    <link rel="stylesheet" href="/teacher_designs/css/styles.css" />
    <!--Poppins-->
    <link rel="preconnect" href="https://fonts.gstatic.com">    
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@700&display=swap" rel="stylesheet">
    <!--Poppins-->
    <link rel="icon" href="/logos/logo.png" type="image/x-icon">
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <title>Teacher | Home</title>
    <script>
      $(document).ready(function(){
        $(".profile .icon_wrap").click(function(){
          $(this).parent().toggleClass("active");
          $(".notifications").removeClass("active");
        });
      });
    </script>
  </head>
  <body id="body">
    <div class="container"> <!--div closed at end-->
      <nav class="navbar">
        <a href="/teacher/dashboard"><img id="logo" src="/logos/newlogo.png" alt="logo"  style="width: 140px; margin-left: 10px ; "></a>
        
        <div class="navbar_right">
          <div class="profile">
            <div class="icon_wrap">
              <span style="font-size: 1.2em;">Welcome : &emsp; </span>
              <img src={{user.profile_picture}} alt="profile_pic">
              <span class="number">{{user.designation}} :</span><span class="name">{{user.name}}</span>
              <i class="fas fa-chevron-down"></i>
            </div>
    
            <div class="profile_dd" >
              <ul class="profile_ul" style=" list-style-type: none;">
                <li class="profile_li"><a href="/settingf/faculty" style="text-decoration: none;" class="profile"><span class="picon"><i class="fas fa-cog"></i>
                  </span>Account</a>
                  <a href="/logout" style="text-decoration: none;"><div class="btn">Logout</div></a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>
   


      <main id="home">
        <div class="main__container">
          <section>
            <div class="main__title"> 
              <img src={{user.profile_picture}} alt="" />
              <div class="main__greeting">
                <h1>{{user.designation}}</h1> 
                <h1>{{user.name}}</h1>
                <p>Welcome to DIS</p>
                <p style="font-size: small;">Session: <span id="clock"></span></p>
              </div>
            </div>
          </section>

          <div class="main__cards" >
            <div class="card">
              <div class="card_inner"  >
                <h3>NEWS</h3> 
                <marquee  direction="up" height="390vh" scrollamount="5" >
                  <div class="newslist">
                    {{#each news}}
                      <p>
                        <span><b>{{this.news_date}}</b></span> : {{this.news_content}}
                      </p><hr>
                    {{/each}}
                  </div>
                </marquee>
              </div>
            </div>
          </div>  

          <div class="charts">
            <div class="charts__right">
              <div class="charts__right__cards">

                <button class="card1" onclick="location.assign('/teacher/studentList')">
                  <h1>STUDENTS LIST</h1>
                </button>

                <button class="card2" onclick="location.assign('/teacher/research')">
                  <h1>RESEARCH STUDENTS</h1>
                </button>

                <button class="card3" onclick="location.assign('/teacher/internals')">
                  <h1>CEE/INTERNAL MARKS ENTRY</h1>
                </button>

                <button class="card4" onclick="location.assign('/teacher/attendance')">
                  <h1>ATTENDANCE ENTRY</h1>
                </button>

                <button class="card5" onclick="location.assign('/teacher/publication')">
                  <h1>PUBLICATIONS</h1>
                </button>

                <button class="card6" onclick="location.assign('/teacher/questionPapers')">
                  <h1>PREVIOUS QUESTION PAPERS</h1>
                </button>

                <button class="card7" onclick="location.assign('/teacher/refresherCourse')">
                  <h1>REFRESHER COURSES</h1>
                </button>

                <button class="card8" onclick="location.assign('/teacher/seminar')">
                  <h1>SEMINARS & CONFERENCES</h1>
                </button>

                <button class="card9" onclick="location.assign('/teacher/requests')">
                  <h1>APPLICATIONS/REQUESTS</h1>
                </button>

                <button class="card10" onclick="location.assign('/teacher/personal')">
                  <h1>PERSONAL DETAILS</h1>
                </button>

                <button class="card11" onclick="location.assign('/teacher/viewAttendance')">
                  <h1>VIEW ATTENDANCE</h1>
                </button>

                <button class="card12" onclick="location.assign('/teacher/viewInternals')">
                  <h1>VIEW INTERNALS</h1>
                </button>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div> <!--dont delete main container div end-->

    {{!-- ----------------------------Scripts------------------------ --}}

    <script src="/teacher_designs/js/scripts.js"></script>
    
    <!--clock for sessiontime-->
    <script type="text/javascript">
      const dateDiv = document.getElementById('clock');
      function myDateFunction() {
        const now = new Date();
        const nowStr = now.toLocaleString('en-US');
        dateDiv.innerHTML = nowStr;
      }
      setInterval(myDateFunction, 1);
    </script>
  </body>
</html>
