<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous"/>
    <link rel="stylesheet" href="/student_designs/css/courses.css" />
    <link rel="icon" href="/logos/logo.png" type="image/x-icon">
    <!--Poppins-->
    <link rel="preconnect" href="https://fonts.gstatic.com">    
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@700&display=swap" rel="stylesheet">
    <!--Poppins-->
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <title>Student | Courses</title>
    <script>
      $(document).ready(function(){
        $(".profile .icon_wrap").click(function(){
          $(this).parent().toggleClass("active");
          $(".notifications").removeClass("active");
        });
      });
    </script>
  </head>
  <body id="body">
    <div class="container"> <!--div closed at end-->
      <nav class="navbar">
        <a href="/student/dashboard"><img id="logo" src="/logos/newlogo.png" alt="logo"  style="width: 140px; margin-left: 10px ; "></a>
        
        <div class="navbar_right">
          <div class="profile">
            <div class="icon_wrap">
                <span style="font-size: 1.2em;">Welcome : &emsp; </span>
              <img src={{user.profile_picture}} alt="profile_pic">
              <span class="number">{{user.register_no}} :</span><span class="name">{{user.name}}</span>
              <i class="fas fa-chevron-down"></i>
            </div>
    
            <div class="profile_dd" >
              <ul class="profile_ul" style=" list-style-type: none;">
                <li class="profile_li"><a class="profile"><span class="picon"><i class="fas fa-cog"></i>
                    </span>Settings</a>
                    <a href="/logout" style="text-decoration: none;"><div class="btn">Logout</div></a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>
   


      <main id="home">
        <div class="main__container">          
          <div class="main__cards">
            <div class="card" id="heading">
              <div class="card_inner"> 
                <h1>COURSES</h1>
              </div>            
            </div>
          </div>
        </div>

        <div class="charts"> 
          <div class="charts__left">            
              <div class="charts__left__cards">
                <div class="coursebox">
                  <div class="title">
                    Add course
                  </div>
                  <div class="form">
                    <form enctype="multipart/form-data" action="/student/addcourse" method="POST" onsubmit="return confirm('Proceed with the entry?');">
                      <div class="inputfield">
                        <label>Name of the course</label>
                        <input type="text" class="input" name="name" required>
                      </div>  
                         
                      <div class="inputfield">
                        <label>Certification Provider</label>
                        <input type="text" class="input" name="provider" required>
                      </div>  
                      
                      <div class="inputfield">
                        <label>Nature of the course</label>
                        <div class="custom_select">
                          <select name="nature" required>
                            <option value="" selected disabled hidden>Select</option>
                            <option value="offline">Offline</option>
                            <option value="online">Online</option>
                          </select>
                        </div>
                      </div>

                      <h6>Course duration:</h6>

                      <div class="inputfield">
                        <label>From</label>
                        <input type="date" class="input" name="start_date" id="dateFrom" required>
                      </div> 

                      <div class="inputfield">
                        <label>To</label>
                        <input type="date" class="input" name="end_date" id="dateTo" required>
                      </div>

                      <div class="inputfield">
                        <label>Attach Certificate</label>
                        <input type="file" class="input" name="certificate" accept="application/pdf" required>
                      </div>

                      <div class="inputfield">
                        <input type="submit" value="Submit" class="btn">
                      </div>
                    </form>

                    {{#if message}}
                      <h4 style="color: red;">{{message}}</h4>
                    {{/if}}
                  </div>
                </div>
              </div>
          </div>        
            

          <div class="charts__right">

              {{!-- <button onclick="myFunction()">Show/Hide</button> --}}
      
            <div class="charts__right__cards" id="table">    
              <table>
                <tr id="header">
                  <th>Name of the course</th>
                  <th>Certification Provider</th>
                  <th>Nature of the course</th>
                  <th>Course date :From</th>
                  <th>Course date :To</th>
                  <th>Certificate</th> 
                </tr>
                {{#each course}}
                  <tr>
                    <td>{{this.course_name}}</td>
                    <td>{{this.certification_provider}}</td>
                    <td>{{this.course_nature}}</td>
                    <td>{{this.course_starts}}</td>
                    <td>{{this.course_ends}}</td>
                    <td><a href="{{this.certificate}}" style="text-decoration: none; color: black;">View</a></td>
                  </tr>
                {{/each}}
              </table> 
            </div>
          </div>
        </div>
      </main>
    </div><!--dont delete main container div end-->



    <script src="/student_designs/js/script.js"></script>
    
    <script type="text/javascript">
      dateFrom.max = new Date().toISOString().split("T")[0];
      dateTo.max = new Date().toISOString().split("T")[0];



