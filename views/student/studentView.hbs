<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous"/>
    <link rel="stylesheet" href="/student_designs/css/studentView.css" />
    <link rel="icon" href="/logos/logo.png" type="image/x-icon">
    <!--Poppins-->
    <link rel="preconnect" href="https://fonts.gstatic.com">    
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@700&display=swap" rel="stylesheet">
    <!--Poppins-->
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <title>Student | Home</title>
    <script>
      $(document).ready(function(){
        $(".profile .icon_wrap").click(function(){
          $(this).parent().toggleClass("active");
          $(".notifications").removeClass("active");
        });
      });
    </script>
  </head>
  <body id="body">
    <div class="container"> <!--div closed at end-->
      <nav class="navbar">
        <a href="/student/dashboard"><img id="logo" src="/logos/newlogo.png" alt="logo"  style="width: 140px; margin-left: 10px ; "></a>
        
        <div class="navbar_right">
          <div class="profile">
            <div class="icon_wrap">
                <span style="font-size: 1.2em;">Welcome : &emsp; </span>
              <img src={{user.profile_picture}} alt="profile_pic">
              <span class="number">{{user.register_no}} :</span><span class="name">{{user.name}}</span>
              <i class="fas fa-chevron-down"></i>
            </div>
    
            <div class="profile_dd" >
              <ul class="profile_ul" style=" list-style-type: none;">
                <li class="profile_li"><a class="profile" href="/settings/student" style="text-decoration: none;"><span class="picon"><i class="fas fa-cog"></i>
                    </span>Account</a>
                    <a href="/logout" style="text-decoration: none;"><div class="btn">Logout</div></a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>

      <main id="home">
        <div class="main__container">
          <div class="main__cards">
            <div class="card">
              <div class="card_inner">
                <h3>NEWS</h3> 
                <marquee direction="up" height="150vh" scrollamount="5">
                  <div class="newslist">
                    {{#each news}}
                    <p>
                    <span><b>{{this.news_date}}</b></span> : {{this.news_content}}
                    </p><hr>
                    {{/each}}
                  </div>
                </marquee>
              </div>
            </div>
          </div>  

          <section>
            <div class="main__title">
              <img src={{user.profile_picture}} alt="" />
              <div class="main__greeting">
                <h1>{{user.name}}</h1>
                <h1>{{user.register_no}}</h1>
                <p>Welcome to DIS</p>
                <p>Session: <span id="clock"></span></p>
              </div>
            </div>
          </section>
        </div>
       
        <div class="charts">
          <div class="charts__right">
            <div class="charts__right__cards">
              
              <button class="card1" onclick="location.assign('/student/results')">
                <h1>RESULT</h1>
              </button>
              <button class="card2" onclick="location.assign('/student/attendance')" >
                <h1>ATTENDANCE</h1>
              </button>
              <button class="card3" onclick="location.assign('/student/courses')">
                <h1>COURSE</h1>
              </button>
              <button class="card4" onclick="location.assign('/student/internships')">
                <h1>INTERNSHIP</h1>
              </button>
              <button class="card5" onclick="location.assign('/student/requests')">
                <h1>APPLICATION/REQUESTS</h1>
              </button>
              <button class="card6" onclick="location.assign('/student/internals')">
                <h1>CEE/INTERNAL MARKS</h1>
              </button>
              <button class="card7" onclick="location.assign('/student/academic')">
                <h1>ACADEMIC DETAILS</h1>
              </button>
              <button class="card8" onclick="location.assign('/student/personal')">
                <h1>PERSONAL DETAILS</h1>
              </button>
            </div>
          </div>
        </div>
      </main>
    </div> <!--dont delete main container div end-->


    {{!-- --------------------------Scripts----------------------- --}}

    <script src="/student_designs/js/script.js"></script>
      
      <!--clock for sessiontime-->
      <script type="text/javascript">
        const dateDiv = document.getElementById('clock');

        function myDateFunction() {
          const now = new Date();
          const nowStr = now.toLocaleString('en-US');
          dateDiv.innerHTML = nowStr;
        }
        setInterval(myDateFunction, 1000);
      </script>
  </body>
</html>
